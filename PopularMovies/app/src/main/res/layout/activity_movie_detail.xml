<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_bar">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_movie_background"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY" />

                        <android.support.v7.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:title=""
                            android:theme="@style/ToolBarTheme.ToolBarStyle"
                            android:background="@android:color/transparent"
                            app:navigationIcon="?homeAsUpIndicator" />
                    </FrameLayout>



                </android.support.design.widget.AppBarLayout>


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_movie_thumb"
                android:layout_width="185dp"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/app_bar"
                tools:src="@drawable/error_placeholder"
                android:scaleType="fitXY"
                android:contentDescription="@string/thumbnail_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/tv_year"
                tools:text="@string/hc_movie_year"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="25sp"
                android:layout_toEndOf="@id/iv_movie_thumb"
                android:layout_toRightOf="@id/iv_movie_thumb"
                android:layout_alignTop="@id/iv_movie_thumb"
                android:layout_marginBottom="8dp"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_grade_black_24dp"
                android:layout_alignStart="@+id/tv_year"
                android:layout_alignLeft="@id/tv_year"
                android:layout_below="@+id/tv_year" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating"
                tools:text="@string/hc_movie_rating"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_toEndOf="@id/iv_star"
                android:layout_toRightOf="@id/iv_star"
                android:layout_below="@id/tv_year"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_descr"
                tools:text="@string/hc_movie_descr"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_below="@id/iv_movie_thumb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv_trailer_section"
                android:background="@color/colorPrimaryExtraLight"
                android:layout_below="@id/tv_descr">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_margin="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_trailers_header"
                            android:layout_margin="8dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:text="@string/trailers_header"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_trailers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_trailers_header"
                            android:layout_margin="8dp" />

                    </RelativeLayout>



                </android.support.v7.widget.CardView>
            </LinearLayout>


            <include
                layout="@layout/reviews_list_section"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/cv_trailer_section"/>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_action_favorite_unfilled"
        android:tint="@android:color/holo_red_light"
        android:onClick="onFavButtonClick"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
